<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>
<br>
<h4>Oligos</h4><br>
   <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="oligos">
    <thead>                         
      <tr>
        <th>Oligo no.</th>                          
        <th>Name</th>
        <th>Sequence</th>
        <th>Tm (&deg;C)</th>
        <th>Description</th>
        <th>Designer</th>
        <th>Delete?</th>

        
      </tr>
    </thead>
    <tbody>
      <% @user.oligos.each do |oligos| %>       
      <tr>
        <td><%= oligos.oligo_no  %></td>
        <td><%= best_in_place oligos, :name %></td>
        <td><%= best_in_place oligos, :sequence   %></td>
        <td><%= best_in_place oligos, :tm  %></td>
        <td><%= best_in_place oligos, :descrip   %></td>
        <td><%= best_in_place oligos, :designer  %></td>
        <td><%= link_to "Delete", oligos, method: :delete, data: { confirm: "You sure?" }, class: "btn btn-sm"%></td>

        
      </tr>
    <% end %>
  </tbody>
</table> 

<br><br>
<h4>Seeds</h4><br>

<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="seeds">
    <thead>                         
      <tr>
        <th>Tube no.</th>                          
        <th>Collection Date</th>
        <th>Parental Tube No.</th>
        <th>Genotype</th>
        <th>Description</th>
        <th>Sourced By</th>
        <th>GMO?</th>
        <th>Delete?</th>

        
      </tr>
    </thead>
    <tbody>
      <% @user.seeds.each do |seeds| %>       
      <tr>
        <td><%= seeds.tube_no  %></td>
        <td><%= best_in_place seeds, :seed_col_date %></td>
        <td><%= best_in_place seeds, :par_tube  %></td>
        <td><%= best_in_place seeds, :genotype %></td>
        <td><%= best_in_place seeds, :descrip  %></td>
        <td><%= best_in_place seeds, :sourced_by  %></td>
        <td><%= best_in_place seeds, :GMO %></td>
        <td><%= link_to "Delete", seeds, method: :delete, data: { confirm: "You sure?" }, class: "btn btn-sm"%></td>

        
      </tr>
    <% end %>
  </tbody>
</table> 
<br><br>
<h4>Plasmids</h4><br>

<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="plasmids">
    <thead>                         
      <tr>
        <th>Ligation no.</th>                          
        <th>Vector backbone</th>
        <th>Insert</th>
        <th>pUQC no.</th>
        <th>Description</th>
        <th>Designer</th>
        <th>Delete?</th>

        
      </tr>
    </thead>
    <tbody>
      <% @user.plasmids.each do |plasmids| %>       
      <tr>
        <td><%= plasmids.ligation  %></td>
        <td><%= best_in_place plasmids, :ligation  %></td>
        <td><%= best_in_place plasmids, :vec_backbone  %></td>
        <td><%= best_in_place plasmids, :puqc %></td>
        <td><%= best_in_place plasmids, :descrip  %></td>
        <td><%= best_in_place plasmids, :designer  %></td>
        <td><%= link_to "Delete", plasmids, method: :delete, data: { confirm: "You sure?" }, class: "btn btn-sm"%></td>

        
      </tr>
    <% end %>
  </tbody>
</table>


  